{
  "$schema": "../schemas/workflow-registry.schema.json",
  "version": "1.0.0",
  "lastUpdated": "2026-01-27T00:00:00Z",
  "metadata": {
    "totalActive": 5,
    "totalArchived": 0,
    "slackEnabled": 3,
    "enterprise": true
  },
  "namingConventions": {
    "pattern": "category-action.yml (e.g., ci-test.yml, ops-deploy.yml)",
    "prefixes": {
      "ci": "Continuous Integration (build, test, lint)",
      "cd": "Continuous Deployment (release, deploy)",
      "ops": "Operations (metrics, monitoring, cleanup)",
      "sync": "Data synchronization workflows",
      "validate": "Validation and verification workflows"
    }
  },
  "categories": {
    "ci": {"description": "Continuous Integration workflows for build and test", "purpose": "Ensure code quality and prevent regressions", "sla": "< 10 minutes"},
    "cd": {"description": "Continuous Deployment workflows", "purpose": "Automate production deployments", "sla": "< 15 minutes"},
    "ops": {"description": "Operational workflows for monitoring and maintenance", "purpose": "System health and observability", "sla": "< 5 minutes"},
    "sync": {"description": "Data synchronization workflows", "purpose": "Keep systems in sync", "sla": "< 30 minutes"},
    "validate": {"description": "Validation workflows", "purpose": "Verify data integrity and schema compliance", "sla": "< 5 minutes"}
  },
  "workflows": [
    {"file": "ci-test.yml", "name": "CI Tests", "category": "ci", "purpose": "Run unit and integration tests on all PRs and pushes", "triggers": ["push", "pull_request"], "pathFilters": ["src/**", "tests/**"], "slack": true, "timeout": "10 minutes", "status": "active", "failureMode": "fail", "expectedOutcome": "All tests pass with >80% coverage"},
    {"file": "ci-lint.yml", "name": "CI Lint", "category": "ci", "purpose": "Check code style and static analysis", "triggers": ["push", "pull_request"], "pathFilters": ["src/**"], "slack": false, "timeout": "5 minutes", "status": "active", "failureMode": "fail", "expectedOutcome": "No linting errors"},
    {"file": "ops-metrics.yml", "name": "Metrics Collection", "category": "ops", "purpose": "Collect and report system metrics", "triggers": ["schedule", "workflow_dispatch"], "schedule": "0 */6 * * *", "slack": true, "timeout": "5 minutes", "status": "active", "failureMode": "warn", "skipConditions": ["Metrics service unavailable"], "externalDependencies": ["prometheus", "grafana"], "expectedOutcome": "Metrics collected and reported", "metricsConfig": {"pipelineRef": "metrics-pipeline.json", "collectsFrom": ["prometheus", "github-api"], "reportsTo": ["github-step-summary", "slack"]}},
    {"file": "validate-schemas.yml", "name": "Schema Validation", "category": "validate", "purpose": "Validate all JSON files against their schemas", "triggers": ["push", "pull_request"], "pathFilters": [".roadmap/**/*.json", "schemas/**"], "slack": false, "timeout": "3 minutes", "status": "active", "failureMode": "fail", "expectedOutcome": "All JSON files pass schema validation"},
    {"file": "sync-notion.yml", "name": "Notion Sync", "category": "sync", "purpose": "Synchronize roadmap data to Notion dashboards", "triggers": ["workflow_dispatch", "schedule"], "schedule": "0 8 * * *", "slack": true, "timeout": "15 minutes", "status": "active", "failureMode": "warn", "skipConditions": ["Notion API rate limited", "No changes detected"], "externalDependencies": ["notion-api"], "expectedOutcome": "Dashboard reflects latest roadmap data"}
  ],
  "normalizationRules": {
    "greenMeansSuccess": "All checks passed, no issues detected",
    "yellowMeansWarning": "Completed with non-critical warnings or skipped optional steps",
    "redMeansFailure": "Critical failure requiring attention",
    "skipBehavior": "Show as green with skip indicator when conditions met"
  }
}
