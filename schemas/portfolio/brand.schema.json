{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://luhtech.dev/schemas/portfolio/brand.json",
  "title": "LuhTech Portfolio Brand Configuration",
  "description": "Schema-first brand configuration for LuhTech portfolio ventures. Defines colors, typography, logos, and background assets for consistent branding across slide generation and marketing materials. References centralized enums from luhtech-enums.schema.v2.json.",
  "type": "object",
  "required": ["$schema", "schemaVersion", "meta", "brands"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema identifier",
      "enum": ["https://luhtech.dev/schemas/portfolio/brand.json", "luhtechnology-brand-v1"]
    },
    "schemaVersion": {
      "$ref": "../_enums/luhtech-enums.schema.v2.json#/definitions/semver"
    },
    "meta": {
      "$ref": "#/definitions/meta"
    },
    "enums": {
      "$ref": "#/definitions/brandEnums",
      "description": "Centralized enumeration values for validation"
    },
    "defaults": {
      "$ref": "#/definitions/brandDefaults",
      "description": "Default values for brand properties"
    },
    "slideTypeToBackgroundStyle": {
      "$ref": "#/definitions/slideTypeToBackgroundStyle",
      "description": "Mapping of slide types to background styles"
    },
    "brands": {
      "type": "object",
      "description": "Venture brand configurations keyed by venture ID",
      "propertyNames": {
        "$ref": "../_enums/luhtech-enums.schema.v2.json#/definitions/ventureId"
      },
      "additionalProperties": {
        "$ref": "#/definitions/brandConfig"
      }
    }
  },
  "definitions": {
    "meta": {
      "type": "object",
      "description": "Document metadata",
      "required": ["lastUpdated"],
      "properties": {
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO-8601 timestamp of last update"
        },
        "updatedBy": {
          "type": "string",
          "description": "Person or system that last updated"
        },
        "version": {
          "type": "integer",
          "minimum": 1,
          "description": "Document version number"
        },
        "notes": {
          "type": "string",
          "description": "Change notes for this version"
        }
      }
    },
    "hexColor": {
      "$ref": "../_enums/luhtech-enums.schema.v2.json#/definitions/hexColor"
    },
    "fontFamily": {
      "type": "string",
      "description": "Google Fonts compatible font family name",
      "enum": [
        "Inter",
        "Roboto",
        "Open Sans",
        "Montserrat",
        "Poppins",
        "Lato",
        "Space Grotesk",
        "Arial",
        "Helvetica",
        "Roboto Mono"
      ]
    },
    "backgroundType": {
      "type": "string",
      "description": "Type of slide background",
      "enum": ["solid_color", "image", "gradient"]
    },
    "backgroundStyle": {
      "type": "string",
      "description": "Standard background styles for different slide contexts",
      "enum": ["cover", "content", "closing"]
    },
    "slideType": {
      "type": "string",
      "description": "Slide type for background style mapping",
      "enum": [
        "cover", "title",
        "problem", "solution", "market", "business_model", "traction",
        "team", "technology", "timeline", "validation", "partnership",
        "competition", "financials", "go_to_market",
        "ask", "closing", "contact", "thank_you"
      ]
    },
    "driveFileId": {
      "type": "string",
      "description": "Google Drive file ID (25+ characters alphanumeric with underscores/hyphens)",
      "pattern": "^[a-zA-Z0-9_-]{25,}$"
    },
    "mimeType": {
      "type": "string",
      "description": "MIME type of the asset",
      "enum": ["image/png", "image/jpeg", "image/svg+xml", "image/gif", "image/webp"]
    },
    "brandEnums": {
      "type": "object",
      "description": "Centralized enumeration values",
      "properties": {
        "ventureIds": {
          "type": "array",
          "items": {
            "$ref": "../_enums/luhtech-enums.schema.v2.json#/definitions/ventureId"
          },
          "description": "All valid venture identifiers"
        },
        "fontFamilies": {
          "type": "array",
          "items": { "$ref": "#/definitions/fontFamily" },
          "description": "All supported font families"
        },
        "backgroundTypes": {
          "type": "array",
          "items": { "$ref": "#/definitions/backgroundType" },
          "description": "All supported background types"
        },
        "backgroundStyles": {
          "type": "array",
          "items": { "$ref": "#/definitions/backgroundStyle" },
          "description": "All supported background styles"
        },
        "slideTypes": {
          "type": "array",
          "items": { "$ref": "#/definitions/slideType" },
          "description": "All supported slide types"
        }
      }
    },
    "brandDefaults": {
      "type": "object",
      "description": "Default values for brand properties",
      "properties": {
        "background": {
          "$ref": "#/definitions/hexColor",
          "default": "#FFFFFF"
        },
        "text": {
          "$ref": "#/definitions/hexColor",
          "default": "#000000"
        },
        "fontTitle": {
          "$ref": "#/definitions/fontFamily",
          "default": "Inter"
        },
        "fontBody": {
          "$ref": "#/definitions/fontFamily",
          "default": "Inter"
        }
      }
    },
    "slideTypeToBackgroundStyle": {
      "type": "object",
      "description": "Mapping of slide types to background styles",
      "propertyNames": {
        "$ref": "#/definitions/slideType"
      },
      "additionalProperties": {
        "$ref": "#/definitions/backgroundStyle"
      }
    },
    "assetReference": {
      "type": "object",
      "description": "Reference to a Google Drive asset",
      "required": ["driveId"],
      "properties": {
        "driveId": {
          "$ref": "#/definitions/driveFileId",
          "description": "Google Drive file ID"
        },
        "filename": {
          "type": "string",
          "description": "Original filename for reference"
        },
        "mimeType": {
          "$ref": "#/definitions/mimeType"
        },
        "dimensions": {
          "type": "object",
          "properties": {
            "width": { "type": "integer", "minimum": 1 },
            "height": { "type": "integer", "minimum": 1 }
          }
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the asset was uploaded"
        }
      }
    },
    "colors": {
      "type": "object",
      "description": "Brand color palette",
      "required": ["primary", "accent"],
      "properties": {
        "primary": {
          "$ref": "#/definitions/hexColor",
          "description": "Primary brand color"
        },
        "accent": {
          "$ref": "#/definitions/hexColor",
          "description": "Accent/secondary brand color"
        },
        "background": {
          "$ref": "#/definitions/hexColor",
          "description": "Default background color",
          "default": "#FFFFFF"
        },
        "text": {
          "$ref": "#/definitions/hexColor",
          "description": "Default text color",
          "default": "#000000"
        },
        "textLight": {
          "$ref": "#/definitions/hexColor",
          "description": "Light text color for dark backgrounds"
        },
        "textMuted": {
          "$ref": "#/definitions/hexColor",
          "description": "Muted/secondary text color"
        }
      }
    },
    "typography": {
      "type": "object",
      "description": "Brand typography settings",
      "properties": {
        "fontTitle": {
          "$ref": "#/definitions/fontFamily",
          "description": "Font family for titles and headings"
        },
        "fontBody": {
          "$ref": "#/definitions/fontFamily",
          "description": "Font family for body text"
        },
        "fontCode": {
          "type": "string",
          "description": "Font family for code blocks",
          "default": "Roboto Mono"
        }
      }
    },
    "assets": {
      "type": "object",
      "description": "Brand asset references (Google Drive IDs)",
      "properties": {
        "logo": {
          "$ref": "#/definitions/assetReference",
          "description": "Brand logo asset"
        },
        "logoLight": {
          "$ref": "#/definitions/assetReference",
          "description": "Light version of logo for dark backgrounds"
        },
        "icon": {
          "$ref": "#/definitions/assetReference",
          "description": "Brand icon/favicon"
        }
      }
    },
    "backgrounds": {
      "type": "object",
      "description": "Style-specific background configuration",
      "properties": {
        "type": {
          "$ref": "#/definitions/backgroundType",
          "default": "solid_color"
        },
        "cover": {
          "$ref": "#/definitions/assetReference",
          "description": "Background for cover/title slides"
        },
        "content": {
          "$ref": "#/definitions/assetReference",
          "description": "Background for content/body slides"
        },
        "closing": {
          "$ref": "#/definitions/assetReference",
          "description": "Background for closing/ask slides"
        },
        "opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 1,
          "description": "Overlay opacity for image backgrounds"
        },
        "overlayColor": {
          "$ref": "#/definitions/hexColor",
          "description": "Optional color overlay on images"
        }
      }
    },
    "brandMetadata": {
      "type": "object",
      "description": "Additional brand metadata",
      "properties": {
        "domain": {
          "type": "string",
          "format": "hostname"
        },
        "socialHandle": {
          "type": "string"
        },
        "brandGuidelines": {
          "type": "string",
          "format": "uri",
          "description": "Link to full brand guidelines document"
        }
      }
    },
    "brandConfig": {
      "type": "object",
      "description": "Complete brand configuration for a venture",
      "required": ["name", "colors"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name of the venture",
          "maxLength": 50
        },
        "tagline": {
          "type": "string",
          "description": "Short tagline or description",
          "maxLength": 150
        },
        "colors": {
          "$ref": "#/definitions/colors"
        },
        "typography": {
          "$ref": "#/definitions/typography"
        },
        "assets": {
          "$ref": "#/definitions/assets"
        },
        "backgrounds": {
          "$ref": "#/definitions/backgrounds"
        },
        "metadata": {
          "$ref": "#/definitions/brandMetadata"
        }
      }
    }
  }
}
